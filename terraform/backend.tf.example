# Backend Configuration Example
#
# Copy this file to backend.tf and update the values for your environment.
# This enables remote state storage in S3 with DynamoDB locking.
#
# Prerequisites:
#   1. Create an S3 bucket for state storage (with versioning enabled)
#   2. Create a DynamoDB table for state locking (partition key: LockID)
#
# For local development/testing, you can skip the backend and use local state.

terraform {
  backend "s3" {
    # TODO: Replace with your S3 bucket name for Terraform state
    bucket = "your-terraform-state-bucket"

    # TODO: Replace with your desired state file path
    key = "terraform-safety-net/terraform.tfstate"

    # TODO: Replace with your AWS region
    region = "us-east-1"

    # TODO: Replace with your DynamoDB table name for state locking
    dynamodb_table = "your-terraform-locks-table"

    encrypt = true
  }
}
